# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lumora"

# Auth
AUTH_SECRET="generate-a-32-character-secret-here"
AUTH_URL="http://localhost:3000"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Cloudflare R2
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET="lumora"
R2_ENDPOINT="https://account-id.r2.cloudflarestorage.com"
R2_PUBLIC_URL="https://cdn.yourdomain.com"

# Email (SMTP)
SMTP_HOST="smtp"
SMTP_PORT="25"
EMAIL_FROM="noreply@yourdomain.com"

# Redis (for rate limiting)
REDIS_URL="redis://localhost:6379"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Lumora"

# Environment
NODE_ENV="development"

# Sentry (optional - error tracking)
# Leave empty to disable Sentry. Only active in production.
# Get your DSN from https://sentry.io > Settings > Projects > [Project] > Client Keys (DSN)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
